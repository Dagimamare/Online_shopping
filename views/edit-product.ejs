<%- include('fragments/head.ejs')%>

</head>

<body>
    <main>
        <%- include('fragments/navigation.ejs')%>
        <form class="product-form" action="/admin/edit-product" method="POST"><br>
             <div class="form-control">
               <!--<label for="title">Id</label>-->
                <input type="hidden" name="id" id="id" value="<%= prod._id %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Title</label>
                <input type="text" name="title" id="title" value="<%= prod.title %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= prod.imageUrl %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="text" name="price" id="price" value="<%= prod.price %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description"><%= prod.description %></textarea>
            </div>

            <button class="btn" type="submit">Edit Product</button>
        </form>
        </div>
    </main>

    <%- include('fragments/end.ejs')%>